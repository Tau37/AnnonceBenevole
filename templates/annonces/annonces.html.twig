{% extends 'base.html.twig' %}

{% block title %}Les Annonces - Les bonnes annonces{% endblock %}

{% block body %}

<script src="{{ asset('assets/js/annonces.js') }}"></script>
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
