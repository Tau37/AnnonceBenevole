{% extends 'base.html.twig' %}

{% block title %}Inscription - Les bonnes annonces
{% endblock %}

{% block body %}
	<form method="post" class="container col-2">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}

		<h1 class="text-center">Inscrivez-vous</h1>

		{{ form_start(registrationForm) }}
		{{ form_row(registrationForm.selection, {
			label: 'Vous êtes : '
			}) }}
		{{ form_row(registrationForm.structure, {
			label: 'Votre structure '
			}) }}
		{% if structureError is defined %}
			<div class="alert alert-danger" role="alert">{{structureError}}</div>
		{% endif %}
		{{ form_row(registrationForm.finess, {
			label: 'Numéro FINESS '
			}) }}
		{% if finessError is defined %}
			<div class="alert alert-danger" role="alert">{{finessErro}}</div>
		{% endif %}
		{{ form_row(registrationForm.email,{
			label: 'Votre email '
			}) }}
		{{ form_row(registrationForm.nom, {
			label: 'Votre nom '
			}) }}
		{{ form_row(registrationForm.prenom, {
			label: 'Votre prénom '
			}) }}
		{{ form_row(registrationForm.ville, {
			label: 'Votre ville '
			}) }}
		{{ form_row(registrationForm.cpostal, {
			label: 'Votre code postal '
			}) }}
		{{ form_row(registrationForm.tel, {
			label: 'Votre numéro de tel '
			}) }}
		{{ form_row(registrationForm.plainPassword, {
				label: 'Votre mot de pass'
			}) }}
		{% if passError is defined %}
			<div class="alert alert-danger" role="alert">{{passError}}</div>
		{% endif %}
		{{ form_row(registrationForm.confirmPassword, {
			label: 'Confirmez votre mot de pass'
			}) }}
		{% if passError is defined %}
			<div class="alert alert-danger" role="alert">{{passError}}</div>
		{% endif %}
		{{ form_row(registrationForm.agreeTerms, {
			label: 'J\' accèpte les termes de conditions d\'utilisation'
		}) }}

		<button type="submit" class="btn btn-primary">Envoyer</button>
		{{ form_end(registrationForm) }}
	</form>
{% endblock %}
