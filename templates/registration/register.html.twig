{% extends 'base.html.twig' %}
{% block title %}Inscription - Les bonnes annonces
{% endblock %}
{% block body %}
	<form method="post" class="container .col" style="height: 100vh;">
		{% for flashError in app.flashes('verify_email_error') %}
			<div class="alert alert-danger" role="alert">{{ flashError }}</div>
		{% endfor %}
		<div class="container d-flex align-items-center justify-content-between mt-4 mb-4">
			<h1>Inscrivez-vous üëç</h1>
			<div class="choose">
				{{ form_row(registrationForm.selection, {'label' : 'Faites votre choix'}) }}
			</div>
		</div>
		{{ form_start(registrationForm) }}
		<div class="structure popUp">
			<div class="form-group">
				{{ form_label(registrationForm.structure, 'Nom de votre structure')}}
				{{ form_widget(registrationForm.structure, {'attr':{'class':'form-control'}})}}
				{{ form_errors(registrationForm.structure) }}
				{% if structureError is defined %}
						<div class="alert alert-danger" role="alert">{{structureError}}</div>
				{% endif %}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.finess, 'Votre N¬∞ FINESS')}}
				{{ form_widget(registrationForm.finess, {'attr':{'class':'form-control'}})}}
				{{ form_errors(registrationForm.finess) }}
				{% if finessError is defined %}
						<div class="alert alert-danger" role="alert">{{finessError}}</div>
				{% endif %}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.email, 'Votre email')}}
			{{ form_widget(registrationForm.email, {'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.nom, 'Votre nom')}}
			{{ form_widget(registrationForm.nom, {'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.prenom, 'Votre pr√©nom')}}
			{{ form_widget(registrationForm.prenom, {'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.ville, {'attr':{'class': 'form-control',
				label: 'Votre ville '
				}}) }}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.cpostal, 'Code postal')}}
			{{ form_widget(registrationForm.cpostal, {'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.tel, 'T√©l√©phone')}}
			{{ form_widget(registrationForm.tel, {'attr':{'class':'form-control'}})}}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.plainPassword, 'Mot de passe')}}
			{{ form_widget(registrationForm.plainPassword, {'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.plainPassword) }}
			{% if passError is defined %}
						<div class="alert alert-danger" role="alert">{{passError}}</div>
				{% endif %}
		</div>
		<div class="form-group">
			{{ form_label(registrationForm.confirmPassword, 'Confirmez le mot de passe')}}
			{{ form_widget(registrationForm.confirmPassword, {'attr':{'class':'form-control'}})}}
			{{ form_errors(registrationForm.confirmPassword) }}
			{% if passError is defined %}
					 <div class="alert alert-danger" role="alert">{{passError}}</div>
			 {% endif %}
		</div>
		<div class="form-group">
			{{ form_row(registrationForm.agreeTerms, {
				label: 'J\' acc√®pte les termes de conditions d\'utilisation'
			}) }}
		</div>
		<button type="submit" class="btn btn-primary">Envoyer</button>
		{{ form_end(registrationForm) }}
	</form>
{% endblock %}
